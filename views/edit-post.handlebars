<article>
   
    <h2 class="title mt-5">Edit Post</h2>
    <hr>
    <form id="edit" class="edit-post-form">
        <div>
            <label for="post-title">Post title:</label>
            <input id="post-title" class="input" name="post-title" type="text" value="{{post.title}}" />
        </div>
        <div>
            <label for="post-content">post content:</label>
            <input id="post-content" class="textarea" name="post-content" type="text" value="{{post.content}}" />
        </div>
        <div class="is-pulled-right">
            Posted by you on {{format_date post.createdAt}}
            |
         {{post.comments.length}} {{> comments post.comments}}


         
        </div>
        <button type="submit" class="button is-success">Save Changes</button>
        <button type="button" class="button is-danger delete-post-btn">Delete Post</button>
    </form>
</article>



<script src="/js/delete-post.js"></script>
<script src="/js/edit-post.js"></script>

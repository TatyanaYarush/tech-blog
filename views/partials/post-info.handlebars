<div class="posts card mb-6">
  <header class="card-header card-header-title has-background-grey-lighter">
    
        <div class="column">
            <p class=" has-text-primary-light"></p>
      <a href="/post/{{id}}"  class="has-text-black is-capitalized is-pulled-left">{{title}} </a></p>
      </div>

      <div class="column">
      <span class=""> </span>
      </div>
    
  </header>

    <div class="card-content">
        <div class="content has-text-justified">
            {{content}}
        </div>
            <div class="is-pulled-right">
                <b>{{user.username}}</b> | 
                 | {{createdAt}} |
                 {{!-- format_plural needs to be registered as a helper in order for below line to work  --}}
                  {{!-- <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a> --}}
            </div>
    </div>
